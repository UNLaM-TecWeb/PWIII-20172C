@model Presentación.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_AnonymousLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 sub-contenedor">
        <div class="row">
            <div class="col-md-4 "></div>
            <div class="col-md-4 ">
                <div class="fondo-transparente">
                </div>
                <div class="contenedor-formu">
                    <h2>Iniciar Session</h2>
                    @Html.BeginForm("Login", "Home") 
                    {
                        <input type="email" id="Email" name="Email" class="form-control" placeholder="e-mail" />
                        <br />
                        <input type="password" id="Contrasenia" class="form-control" name="Contrasenia" placeholder="Contraseña" />
                        <br />
                        <button type="submit" id="btnIngresar" name="btnIngresar" class="btn btn-success">ingresar</button>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4 "></div>
    </div>
</div>